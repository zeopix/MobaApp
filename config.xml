<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.phonegap.hello-world"
        version   = "2.4.0">
    <name>Medibaby</name>

    <description>
        Aplicación Medibaby para consultas online con su pediatra.
    </description>

    <author href="http://3media.es" email="zeopix@gmail.com">
        Iván Guillén
    </author>

    <feature name="http://api.phonegap.com/1.0/device" />

    <preference name="phonegap-version" value="2.2.0" />
    <preference name="orientation"      value="default" />
    <preference name="target-device"    value="universal" />
    <preference name="fullscreen"       value="false" />
    <preference name="webviewbounce" value="false" />
    <access origin="http://medibaby.com" subdomains="true" />
    <access origin="192.168.1.21" subdomains="true" />


    <gap:splash src="assets/splash/Default~iphone.png" />

    <gap:splash src="assets/splash/Default~iphone.png" width="320" height="480" />
    <gap:splash src="assets/splash/Default@2x~iphone.png.png" width="640" height="960" />
    <gap:splash src="assets/splash/Default_iphone5.png" width="639" height="1136" />
    <gap:splash src="assets/splash/Default-Landscape_2ipad.png" width="1024" height="768" />
    <gap:splash src="assets/splash/Default_Landscape_Ipad.png" width="2048" height="1536" />
    <gap:splash src="assets/splash/Default-Portrait~ipad.png" width="768" height="1024" />
    <gap:splash src="assets/splash/Default-Portrait@2x~ipad.png" width="1536" height="2016" />

    <icon src="assets/icons/icon_at_2x.png"/>
    <icon src="assets/icons/icon.png" gap:platform="ios" width="57" height="57" />
    <icon src="assets/icons/icon-72.png" gap:platform="ios" width="72" height="72" />
    <icon src="assets/icons/icon_at_2x.png" gap:platform="ios" width="114" height="114" />
    <icon src="assets/icons/icon-72_at_2x.png" gap:platform="ios" width="144" height="144" />
    <icon src="assets/icons/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <icon src="assets/icons/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <icon src="assets/icons/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <icon src="assets/icons/xhdpi.png" gap:platform="android" gap:density="xhdpi" />

</widget>